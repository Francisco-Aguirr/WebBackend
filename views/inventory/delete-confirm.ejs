<h1>Delete <%= inv_make %> <%= inv_model %></h1>

<% if (errors && errors.length > 0) { %>
  <div class="error-messages">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<p class="warning">⚠️ Confirm Deletion - The delete is permanent and cannot be undone.</p>

<form method="post" action="/inv/delete" class="warning">
  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <div class="form-group">
    <label>Make:</label>
    <input type="text" class="form-control" value="<%= inv_make %>" readonly>
  </div>

  <div class="form-group">
    <label>Model:</label>
    <input type="text" class="form-control" value="<%= inv_model %>" readonly>
  </div>

  <div class="form-group">
    <label>Year:</label>
    <input type="text" class="form-control" value="<%= inv_year %>" readonly>
  </div>

  <div class="form-group">
    <label>Price:</label>
    <input type="text" class="form-control" value="<%= inv_price %>" readonly>
  </div>

  <button type="submit" class="btn btn-danger">Confirm Deletion</button>
  <a href="/inv/" class="btn btn-cancel">Cancel</a>
</form>