

<h1>Add New Inventory</h1>

<% if (errors && errors.length > 0) { %>
  <div class="error-messages" style="color: red; margin-bottom: 1em;">
    <ul>
      <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
<% }) %>

    </ul>
  </div>
<% } %>

<form class="add-inventory-form" method="post" action="/inv/add-inventory">
  <label for="classification_id">Classification</label>
  <%- classificationList %>

  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" required value="<%= formData?.inv_make || '' %>">

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" required value="<%= formData?.inv_model || '' %>">

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" required><%= formData?.inv_description || '' %></textarea>

  <label for="inv_image">Image Path</label>
  <input type="text" id="inv_image" name="inv_image" required value="<%= formData ? (formData.inv_image || '') : '' %>">


  <label for="inv_thumbnail">Thumbnail Path</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= formData ? (formData.inv_thumbnail || '') : '' %>">


  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" required value="<%= formData?.inv_price || '' %>">

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" required value="<%= formData?.inv_year || '' %>">

  <label for="inv_miles">Miles</label>
  <input type="number" id="inv_miles" name="inv_miles" required value="<%= formData?.inv_miles || '' %>">

  <label for="inv_color">Color</label>
  <input type="text" id="inv_color" name="inv_color" required value="<%= formData?.inv_color || '' %>">

  <button type="submit">Add Vehicle</button>
</form>

